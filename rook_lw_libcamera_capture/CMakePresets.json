{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "rpi-arm64",
      "displayName": "Raspberry Pi OS (aarch64) via sysroot",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/rpi-arm64",
      "toolchainFile": "${sourceDir}/cmake/toolchains/rpi-arm64-sysroot.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_BUILD_WITH_INSTALL_RPATH": "ON",
        "CMAKE_SKIP_RPATH": "ON",
        "CMAKE_INSTALL_RPATH": "",
        "ROOK_LW_LIBCAMERA_BUILD_EXAMPLE": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "rpi-arm64",
      "configurePreset": "rpi-arm64"
    }
  ]
}
